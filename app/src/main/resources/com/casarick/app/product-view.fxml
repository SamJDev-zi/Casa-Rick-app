<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.casarick.app.controller.ProductController">
    
    <Pane prefWidth="400.0" HBox.hgrow="SOMETIMES">
        <children>
                <TextField fx:id="productName" layoutX="90.0" layoutY="117.0" prefHeight="25.0" prefWidth="150.0" />
                
                <ComboBox fx:id="categoryMenu" layoutX="89.0" layoutY="166.0" prefWidth="150.0" promptText="Categoria" />
                
                <ComboBox fx:id="typeMenu" layoutX="89.0" layoutY="204.0" prefWidth="150.0" promptText="Tipo" />
                
                <ComboBox fx:id="industryMenu" layoutX="90.0" layoutY="241.0" prefWidth="150.0" promptText="Industria" />

                <Label layoutX="90.0" layoutY="370.0" text="Inventario Inicial">
                    <font><Font size="14.0" /></font>
                </Label>
                
                <TextField fx:id="costPriceField" layoutX="89.0" layoutY="442.0" prefHeight="25.0" prefWidth="150.0" promptText="Precio Costo" />
                
                <TextField fx:id="salePriceField" layoutX="90.0" layoutY="481.0" prefHeight="25.0" prefWidth="150.0" promptText="Precio Venta" />
                
                <TextField fx:id="stockField" layoutX="89.0" layoutY="403.0" prefHeight="25.0" prefWidth="150.0" promptText="Stock Inicial" />

                <Button fx:id="addCategory" layoutX="249.0" layoutY="166.0" mnemonicParsing="false" onAction="#handleAddCategory" text="+" />
                
                <Button fx:id="addType" layoutX="249.0" layoutY="204.0" mnemonicParsing="false" onAction="#handleAddType" text="+" />
                
                <Button fx:id="addIndustry" layoutX="249.0" layoutY="241.0" mnemonicParsing="false" onAction="#handleAddIndustry" text="+" />

                <Button fx:id="createButton" layoutX="249.0" layoutY="554.0" mnemonicParsing="false" onAction="#handleCreateProduct" prefHeight="25.0" prefWidth="144.0" text="Crear Producto" />
                
                <TextField fx:id="barCodeField" editable="false" layoutX="90.0" layoutY="520.0" prefHeight="25.0" prefWidth="150.0" promptText="CÃ³digo de Barras" />
                
                <ComboBox fx:id="colorMenu" layoutX="89.0" layoutY="279.0" prefWidth="150.0" promptText="Color" />
                
                <Button fx:id="addColor" layoutX="249.0" layoutY="279.0" mnemonicParsing="false" onAction="#handleAddColor" prefHeight="25.0" prefWidth="24.0" text="+" />
                
                <ComboBox fx:id="sizes" layoutX="90.0" layoutY="317.0" prefWidth="150.0" promptText="Talla" />
            </children>
    </Pane>
    
    <BorderPane styleClass="banner-logo" stylesheets="@../../../css/stylecss.css" HBox.hgrow="ALWAYS">
        <center>
            <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
                <HBox alignment="CENTER" spacing="40">
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Vista en Vivo" />
                        <ImageView fx:id="liveView" fitHeight="200.0" fitWidth="200.0" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </ImageView>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="10">
                        <Label text="Foto Capturada" />
                        <ImageView fx:id="capturedImageView" fitHeight="200.0" fitWidth="214.0" preserveRatio="true">
                            <VBox.margin>
                                <Insets bottom="10.0" />
                            </VBox.margin>
                        </ImageView>
                    </VBox>
                </HBox>
                
                <Label fx:id="photoPathLabel" text="URL de Foto: (No guardada)" wrapText="true" maxWidth="500">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>
            </VBox>
        </center>
        
        <bottom>
            <VBox alignment="CENTER" spacing="20">
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="onCamera" mnemonicParsing="false" onAction="#handleTurnOnCamera" 
                            prefHeight="35.0" prefWidth="100.0" text="Encender" />
                    
                    <Button fx:id="ofCamera" mnemonicParsing="false" onAction="#handleTurnOffCamera" 
                            prefHeight="35.0" prefWidth="100.0" text="Apagar" />
                    
                    <Button fx:id="takePhoto" mnemonicParsing="false" onAction="#handleTakePhoto" 
                            prefHeight="35.0" prefWidth="120.0" text="Tomar Foto" />
                    
                    <Button fx:id="savePhoto" mnemonicParsing="false" onAction="#handleSavePhoto" 
                            prefHeight="35.0" prefWidth="120.0" text="Guardar Foto" />
                </HBox>
                
                <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#handleBackAction" 
                        prefHeight="35.0" prefWidth="100.0" text="Volver">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </Button>
            </VBox>
        </bottom>
    </BorderPane>
</HBox>
