<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" stylesheets="@../../../css/stylecss.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.InventoryController">
    
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="25.0">
            
            <children>
                <Label text="Control de Inventario (Existencias)">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="registerToday" mnemonicParsing="false" onAction="#loadCreatedTodayInventories" prefHeight="35.0" prefWidth="150.0" style="-fx-font-weight: bold;" styleClass="edit-button" text="Registrados hoy" />
                <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#loadInventoryData" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #2ecc71; -fx-font-weight: bold; -fx-text-fill: white;" text="Actualizar" />
                <Button fx:id="btnBack" mnemonicParsing="false" onAction="#handleBack" prefHeight="35.0" prefWidth="100.0" style="-fx-font-weight: bold;" styleClass="logout-button" text="Volver" />
            </children>
        </HBox>

        <VBox prefHeight="431.0" prefWidth="1140.0" spacing="10.0" AnchorPane.bottomAnchor="84.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="85.0">
            
            <padding>
                <Insets bottom="15.0" />
            </padding>
            
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Filtros:" />
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 12px; -fx-text-fill: #555;" text="Categoría:" />
                            <ComboBox fx:id="filterCategory" onAction="#handleCategoryFilter" prefWidth="150.0" promptText="Todas las categorías" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 12px; -fx-text-fill: #555;" text="Tipo:" />
                            <ComboBox fx:id="filterType" onAction="#handleTypeFilter" prefWidth="150.0" promptText="Todos los tipos" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 12px; -fx-text-fill: #555;" text="Industria:" />
                            <ComboBox fx:id="filterIndustry" onAction="#handleIndustryFilter" prefWidth="150.0" promptText="Todas las industrias" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label style="-fx-font-size: 12px; -fx-text-fill: #555;" text="Buscar:" />
                            <HBox spacing="5.0">
                                <TextField fx:id="searchField" prefHeight="24.0" prefWidth="249.0" promptText="Nombre o código..." />
                                <Button fx:id="btnSearch" mnemonicParsing="false" onAction="#handleSearch" prefHeight="24.0" prefWidth="93.0" style="-fx-background-color: #f39c12; -fx-font-weight: bold; -fx-text-fill: white;" text="Buscar" />
                            </HBox>
                        </VBox>
                        
                        <Button fx:id="btnClearFilters" mnemonicParsing="false" onAction="#handleClearFilters" prefHeight="24.0" prefWidth="212.0" style="-fx-background-color: #e74c3c; -fx-font-weight: bold; -fx-text-fill: white;" text="Limpiar Filtros">
                            <HBox.margin>
                                <Insets top="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                
                <TableView fx:id="inventoryTable" prefHeight="331.0" prefWidth="1140.0" VBox.vgrow="ALWAYS">
                    
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" style="-fx-alignment: CENTER;" text="ID" />
                        <TableColumn fx:id="colProduct" prefWidth="136.0" text="Producto" />
                        <TableColumn fx:id="colCategory" prefWidth="119.0" text="Categoría" />
                        <TableColumn fx:id="colType" prefWidth="98.0" text="Tipo" />
                        <TableColumn fx:id="colIndustry" prefWidth="93.0" text="Industria" />
                        <TableColumn fx:id="colStock" prefWidth="72.0" style="-fx-alignment: CENTER;" text="Stock" />
                        <TableColumn fx:id="number" prefWidth="137.0" text="Número" />
                        <TableColumn fx:id="codeBar" prefWidth="233.0" text="Código de barras" />
                        <TableColumn fx:id="colCost" prefWidth="95.0" style="-fx-alignment: CENTER_RIGHT;" text="P. Compra" />
                        <TableColumn fx:id="colSale" prefWidth="125.0" style="-fx-alignment: CENTER_RIGHT;" text="P. Venta" />
                    </columns>
                    
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="10.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            
            <children>
                <Label fx:id="resultsCountLabel" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Mostrando 0 resultados" />
                
                <Pane HBox.hgrow="ALWAYS" />
                
                <Button fx:id="printButton" mnemonicParsing="false" prefHeight="35.0" prefWidth="100.0" style="-fx-background-color: #9b59b6; -fx-font-weight: bold; -fx-text-fill: white;" text="Imprimir" />
            </children>
        </HBox>
    </children>
</AnchorPane>
