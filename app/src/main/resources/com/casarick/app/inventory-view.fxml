<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.InventoryController">
    <children>
        <Label layoutX="30.0" layoutY="25.0" text="Control de Inventario (Existencias)">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Label>

        <TableView fx:id="inventoryTable" layoutX="25.0" layoutY="80.0" prefHeight="480.0" prefWidth="850.0">
            <columns>
                <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                <TableColumn fx:id="colProduct" prefWidth="180.0" text="Producto" />
                <TableColumn fx:id="colCategory" prefWidth="120.0" text="CategorÃ­a" />
                <TableColumn fx:id="colType" prefWidth="100.0" text="Tipo" />
                <TableColumn fx:id="colIndustry" prefWidth="100.0" text="Industria" />
                <TableColumn fx:id="colStock" prefWidth="80.0" text="Stock" />
                <TableColumn fx:id="colCost" prefWidth="100.0" text="P. Compra" />
                <TableColumn fx:id="colSale" prefWidth="100.0" text="P. Venta" />
            </columns>
        </TableView>

        <Button fx:id="btnRefresh" layoutX="775.0" layoutY="30.0" mnemonicParsing="false" onAction="#loadInventoryData" text="Actualizar" />
        <Button fx:id="btnBack" layoutX="700.0" layoutY="30.0" mnemonicParsing="false" onAction="#handleBack" text="Volver" />
    </children>
</AnchorPane>