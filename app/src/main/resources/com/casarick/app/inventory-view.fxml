<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="800.0" prefWidth="1200.0" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.casarick.app.controller.InventoryController">
    
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0" 
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="25.0">
            
            <children>
                <Label text="Control de Inventario (Existencias)">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="registerToday" mnemonicParsing="false" 
                       onAction="#loadCreatedTodayInventories" 
                       prefHeight="35.0" prefWidth="150.0"
                       style="-fx-background-color: #3498db; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="Registrados hoy" />
                <Button fx:id="btnBack" mnemonicParsing="false" 
                       onAction="#handleBack" 
                       prefHeight="35.0" prefWidth="100.0"
                       style="-fx-background-color: #95a5a6; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="Volver" />
                <Button fx:id="btnRefresh" mnemonicParsing="false" 
                       onAction="#loadInventoryData" 
                       prefHeight="35.0" prefWidth="100.0"
                       style="-fx-background-color: #2ecc71; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="Actualizar" />
            </children>
        </HBox>

        <VBox spacing="10.0" 
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" 
              AnchorPane.topAnchor="85.0" AnchorPane.bottomAnchor="140.0">
            
            <padding>
                <Insets bottom="15.0" />
            </padding>
            
            <children>
                <HBox alignment="CENTER_LEFT" spacing="15.0">
                    <children>
                        <Label text="Filtros:" 
                               style="-fx-font-weight: bold; -fx-font-size: 14px;" />
                        
                        <VBox spacing="5.0">
                            <Label text="Categoría:" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
                            <ComboBox fx:id="filterCategory" 
                                     prefWidth="150.0" 
                                     promptText="Todas las categorías" 
                                     onAction="#handleCategoryFilter" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label text="Tipo:" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
                            <ComboBox fx:id="filterType" 
                                     prefWidth="150.0" 
                                     promptText="Todos los tipos" 
                                     onAction="#handleTypeFilter" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label text="Industria:" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
                            <ComboBox fx:id="filterIndustry" 
                                     prefWidth="150.0" 
                                     promptText="Todas las industrias" 
                                     onAction="#handleIndustryFilter" />
                        </VBox>
                        
                        <VBox spacing="5.0">
                            <Label text="Buscar:" 
                                   style="-fx-font-size: 12px; -fx-text-fill: #555;" />
                            <HBox spacing="5.0">
                                <TextField fx:id="searchField" 
                                          prefWidth="200.0" 
                                          promptText="Nombre o código..." />
                                <Button fx:id="btnSearch" 
                                       mnemonicParsing="false" 
                                       onAction="#handleSearch" 
                                       prefHeight="30.0" prefWidth="80.0"
                                       style="-fx-background-color: #f39c12; -fx-font-weight: bold; -fx-text-fill: white;" 
                                       text="Buscar" />
                            </HBox>
                        </VBox>
                        
                        <Pane HBox.hgrow="ALWAYS" />
                        
                        <Button fx:id="btnClearFilters" 
                            mnemonicParsing="false" 
                            onAction="#handleClearFilters" 
                            prefHeight="30.0" prefWidth="120.0"
                            style="-fx-background-color: #e74c3c; -fx-font-weight: bold; -fx-text-fill: white;" 
                            text="Limpiar Filtros">
                            <HBox.margin>
                                <Insets top="15.0" />
                            </HBox.margin>
                        </Button>
                    </children>
                </HBox>
                
                <TableView fx:id="inventoryTable" 
                          VBox.vgrow="ALWAYS">
                    
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50.0" text="ID" 
                                    style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="colProduct" prefWidth="136.0" text="Producto" />
                        <TableColumn fx:id="colCategory" prefWidth="119.0" text="Categoría" />
                        <TableColumn fx:id="colType" prefWidth="98.0" text="Tipo" />
                        <TableColumn fx:id="colIndustry" prefWidth="93.0" text="Industria" />
                        <TableColumn fx:id="colStock" prefWidth="72.0" text="Stock" 
                                    style="-fx-alignment: CENTER;" />
                        <TableColumn fx:id="number" prefWidth="137.0" text="Número" />
                        <TableColumn fx:id="codeBar" prefWidth="233.0" text="Código de barras" />
                        <TableColumn fx:id="colCost" prefWidth="95.0" text="P. Compra" 
                                    style="-fx-alignment: CENTER_RIGHT;" />
                        <TableColumn fx:id="colSale" prefWidth="125.0" text="P. Venta" 
                                    style="-fx-alignment: CENTER_RIGHT;" />
                    </columns>
                    
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </children>
        </VBox>

        <HBox alignment="CENTER" spacing="10.0" 
              AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.bottomAnchor="20.0">
            
            <children>
                <Label fx:id="resultsCountLabel" 
                      text="Mostrando 0 resultados" 
                      style="-fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                
                <Pane HBox.hgrow="ALWAYS" />
                
                <Button fx:id="printButton" mnemonicParsing="false" 
                       prefHeight="35.0" prefWidth="100.0"
                       style="-fx-background-color: #9b59b6; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="Imprimir" />
            </children>
        </HBox>
    </children>
</AnchorPane>
