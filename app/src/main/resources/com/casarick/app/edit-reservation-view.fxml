<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #f4f7f6;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.EditReservationController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #2c3e50;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding><Insets left="20.0" right="20.0" /></padding>
            <children>
                <Label text="GESTIÓN DE RESERVAS" textFill="WHITE">
                    <font><Font name="System Bold" size="18.0" /></font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnBack" onAction="#handleBack" style="-fx-background-color: #e74c3c;" text="VOLVER" textFill="WHITE" />
            </children>
        </HBox>

        <SplitPane dividerPositions="0.7" layoutY="60.0" prefHeight="540.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
            <items>
                <VBox spacing="10.0">
                    <padding><Insets bottom="10.0" left="10.0" right="10.0" top="10.0" /></padding>
                    <children>
                        <Label style="-fx-font-weight: bold;" text="Reservas Pendientes en Sucursal" />
                        <TableView fx:id="tblReservations" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colId" prefWidth="40.0" text="ID" />
                                <TableColumn fx:id="colDesc" prefWidth="120.0" text="Descripción" />
                                <TableColumn fx:id="colCustomer" prefWidth="130.0" text="Cliente" />
                                <TableColumn fx:id="colStock" prefWidth="60.0" text="Cant." />
                                <TableColumn fx:id="colTotalPrice" prefWidth="90.0" text="Precio Total" />
                                <TableColumn fx:id="colBalance" prefWidth="90.0" text="Saldo Pend." />
                                <TableColumn fx:id="colStatus" prefWidth="85.0" text="Estado" />
                                <TableColumn fx:id="colExpiration" prefWidth="100.0" text="Vence" />
                            </columns>
                        </TableView>
                    </children>
                </VBox>

                <VBox fx:id="paneEdit" disable="true" spacing="15.0" style="-fx-background-color: #ffffff;">
                    <padding><Insets bottom="20.0" left="15.0" right="15.0" top="20.0" /></padding>
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="EDITAR RESERVA" />
                        <Separator />

                        <VBox spacing="5.0">
                            <Label text="Estado:" />
                            <ComboBox fx:id="cbStatus" maxWidth="Infinity" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Saldo Pendiente (Balance):" />
                            <TextField fx:id="txtBalance" promptText="0.00" />
                        </VBox>

                        <VBox spacing="5.0">
                            <Label text="Descripción:" />
                            <TextArea fx:id="txtDescription" prefHeight="100.0" wrapText="true" />
                        </VBox>

                        <Pane VBox.vgrow="ALWAYS" />

                        <Button fx:id="btnSave" maxWidth="Infinity" onAction="#handleUpdate" prefHeight="45.0" style="-fx-background-color: #27ae60; -fx-font-weight: bold;" text="GUARDAR CAMBIOS" textFill="WHITE" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</AnchorPane>