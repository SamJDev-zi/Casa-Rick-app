<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.casarick.app.controller.admin.CreateCustomerController"
            prefHeight="400.0" prefWidth="600.0"
            style="-fx-background-color: #f5f5f5;">
    
    <children>
        <!-- Título -->
        <Label layoutX="20.0" layoutY="20.0" text="Crear nuevo cliente">
            <font>
                <Font size="18.0" style="BOLD" />
            </font>
        </Label>
        
        <!-- Línea separadora -->
        <Separator layoutX="20.0" layoutY="55.0" 
                  AnchorPane.leftAnchor="20.0" 
                  AnchorPane.rightAnchor="20.0" />
        
        <!-- Contenedor principal del formulario -->
        <VBox spacing="15.0" layoutY="70.0" 
              AnchorPane.topAnchor="70.0" 
              AnchorPane.bottomAnchor="60.0" 
              AnchorPane.leftAnchor="20.0" 
              AnchorPane.rightAnchor="20.0">
            
            <!-- Campo: Nombre -->
            <VBox spacing="5.0">
                <Label text="Nombre (Obligatorio)" style="-fx-font-weight: bold;" />
                <TextField fx:id="customerName" promptText="Ingrese el nombre del cliente" 
                          maxWidth="Infinity" />
            </VBox>
            
            <!-- Campo: Apellido -->
            <VBox spacing="5.0">
                <Label text="Apellido (Obligatorio)" style="-fx-font-weight: bold;" />
                <TextField fx:id="customerLastName" promptText="Ingrese el apellido del cliente" 
                          maxWidth="Infinity" />
            </VBox>
            
            <!-- Campo: Teléfono -->
            <VBox spacing="5.0">
                <Label text="Teléfono (Obligatorio)" style="-fx-font-weight: bold;" />
                <TextField fx:id="customerPhone" promptText="Ingrese el número telefónico" 
                          maxWidth="Infinity" />
            </VBox>
            
            <!-- Espacio flexible para empujar los botones hacia abajo -->
            <Pane VBox.vgrow="ALWAYS" />
            
        </VBox>
        
        <!-- Barra de botones en la parte inferior -->
        <HBox alignment="CENTER_RIGHT" spacing="10.0" 
              AnchorPane.bottomAnchor="15.0" 
              AnchorPane.leftAnchor="20.0" 
              AnchorPane.rightAnchor="20.0">
            
            <children>
                <!-- Espacio flexible para empujar botones a la derecha -->
                <Pane HBox.hgrow="ALWAYS" />
                
                <Button fx:id="cancelAction" mnemonicParsing="false" 
                       onAction="#handleCancelAction" 
                       prefHeight="35.0" prefWidth="100.0" 
                       style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" 
                       text="Cancelar" />
                
                <Button fx:id="createCustomer" mnemonicParsing="false" 
                       onAction="#handleCreateAction" 
                       prefHeight="35.0" prefWidth="100.0" 
                       style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" 
                       text="Crear" />
            </children>
        </HBox>
    </children>
</AnchorPane>
