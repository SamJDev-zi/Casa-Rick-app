<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1200.0" styleClass="banner-logo" stylesheets="@../../../css/stylecss.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.LabelController">
    
    <children>
        <HBox alignment="CENTER_RIGHT" prefHeight="132.0" spacing="10.0" styleClass="banner-logo" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            
            <padding>
                <Insets bottom="47.0" left="20.0" right="20.0" top="47.0" />
            </padding>
            
            <children>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnToday" mnemonicParsing="false" prefHeight="36.0" prefWidth="212.0" styleClass="login-button" text="Registrados hoy" />
                <Button fx:id="buttonBack" mnemonicParsing="false" onAction="#buttonBack" prefHeight="36.0" prefWidth="100.0" styleClass="logout-button" text="Volver" />
            </children>
        </HBox>

        <VBox spacing="20.0" AnchorPane.bottomAnchor="70.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="143.0">
            
            <children>
                <GridPane fx:id="labelGrid" VBox.vgrow="ALWAYS">
                    <columnConstraints>
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="100.0" />
                        <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="ALWAYS" />
                        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="ALWAYS" />
                        <RowConstraints minHeight="100.0" prefHeight="100.0" vgrow="ALWAYS" />
                    </rowConstraints>
                </GridPane>
                
                <Pane VBox.vgrow="NEVER" />
            </children>
        </VBox>

        <HBox alignment="CENTER_RIGHT" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0">
            
            <children>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnPrint" mnemonicParsing="false" prefHeight="36.0" prefWidth="158.0" styleClass="login-button" text="Imprimir" />
            </children>
        </HBox>
    </children>
</AnchorPane>
