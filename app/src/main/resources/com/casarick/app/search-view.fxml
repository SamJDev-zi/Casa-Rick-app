<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../../../css/stylecss.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.SearchController">
    
    <children>
        <Pane prefHeight="178.0" styleClass="banner-logo" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            
            <children>
                <!-- Botón Volver alineado a la derecha -->
                <Button fx:id="buttonBack" layoutX="826.0" layoutY="14.0" mnemonicParsing="false" text="Volver" AnchorPane.rightAnchor="14.50537109375" AnchorPane.topAnchor="14.0" />
                
                <!-- Contenedor para campos de búsqueda (centrados) -->
                <HBox alignment="CENTER" spacing="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="77.0" />
                  
                        <TextField fx:id="searchByNumber" layoutX="531.0" layoutY="68.0" prefHeight="42.0" prefWidth="214.0" promptText="Buscar por número (ej. 22-1)" />
                  <TextField fx:id="searchByName" layoutX="282.0" layoutY="68.0" prefHeight="42.0" prefWidth="214.0" promptText="Buscar por nombre" />
            </children>
        </Pane>
        
        <!-- Área de resultados/mensajes -->
        <VBox spacing="10.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="178.0">
            
            <children>
                <!-- Texto informativo (opcional, puedes eliminarlo si no lo necesitas) -->
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="" VBox.vgrow="NEVER" />
                
                <!-- Panel para mostrar resultados de búsqueda -->
                <Pane fx:id="viewProduct" VBox.vgrow="ALWAYS" />
            </children>
        </VBox>
    </children>
</AnchorPane>
