<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.Separator?>

<AnchorPane prefHeight="300.0" prefWidth="400.0" style="-fx-background-color: #f5f5f5;" 
            xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.casarick.app.controller.CreateCustomerController">
   
   <children>
      <Label layoutX="20.0" layoutY="20.0" text="Crear nuevo cliente">
         <font>
            <Font size="18.0" style="BOLD" />
         </font>
      </Label>
      
      <Separator layoutX="20.0" layoutY="55.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" />
      
      <VBox spacing="15.0" layoutY="70.0" AnchorPane.topAnchor="70.0" AnchorPane.bottomAnchor="60.0" 
            AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         
         <VBox spacing="5.0">
            <Label text="Nombre (Obligatorio)" style="-fx-font-weight: bold;" />
            <TextField fx:id="customerName" promptText="Ingrese el nombre del cliente" 
                      maxWidth="Infinity" />
         </VBox>
         
         <VBox spacing="5.0">
            <Label text="Apellido (Obligatorio)" style="-fx-font-weight: bold;" />
            <TextField fx:id="customerLastName" promptText="Ingrese el apellido del cliente" 
                      maxWidth="Infinity" />
         </VBox>
         
         <VBox spacing="5.0">
            <Label text="Teléfono (Obligatorio)" style="-fx-font-weight: bold;" />
            <TextField fx:id="customerPhone" promptText="Ingrese el número telefónico" 
                      maxWidth="Infinity" />
         </VBox>
         
         <Pane VBox.vgrow="ALWAYS" />
         
      </VBox>
      
      <HBox alignment="CENTER_RIGHT" spacing="10.0" 
            AnchorPane.bottomAnchor="15.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
         <children>
            <Pane HBox.hgrow="ALWAYS" />
            
            <Button fx:id="cancelAction" mnemonicParsing="false" onAction="#handleCancelAction" 
                   prefHeight="35.0" prefWidth="100.0" 
                   style="-fx-background-color: #95a5a6; -fx-text-fill: white; -fx-font-weight: bold;" 
                   text="Cancelar" />
            
            <Button fx:id="createCustomer" mnemonicParsing="false" onAction="#handleCreateAction" 
                   prefHeight="35.0" prefWidth="100.0" 
                   style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold;" 
                   text="Crear" />
         </children>
      </HBox>
   </children>
</AnchorPane>
