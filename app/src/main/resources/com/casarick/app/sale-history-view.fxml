<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="650.0" prefWidth="1000.0" spacing="15.0" style="-fx-background-color: #f4f4f4;" stylesheets="@../../../css/stylecss.css" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.casarick.app.controller.SaleHistoryController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <children>
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="HISTORIAL DE VENTAS" textFill="#2c3e50">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Label fx:id="lblBranch" text="Sucursal: ..." textFill="#7f8c8d">
                    <font>
                        <Font name="System Italic" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>

        <HBox alignment="CENTER_LEFT" spacing="12.0" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 8; -fx-border-color: #ddd; -fx-border-radius: 8;">
            <children>
                <Label text="Desde:">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
                <DatePicker fx:id="dpStart" prefWidth="140.0" />

                <Label text="Hasta:">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Label>
                <DatePicker fx:id="dpEnd" prefWidth="140.0" />

                <Button fx:id="btnSearch" style="-fx-background-color: #3498db; -fx-cursor: hand;" text="BUSCAR RANGO" textFill="WHITE">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>

                <Button fx:id="btnToday" style="-fx-background-color: #27ae60; -fx-cursor: hand;" text="VENTAS DE HOY" textFill="WHITE">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>

                <Pane HBox.hgrow="ALWAYS" />

                <Button fx:id="btnBack" prefWidth="100.0" style="-fx-cursor: hand; -fx-font-weight: bold;" styleClass="logout-button" text="VOLVER" textFill="WHITE">
                    <font><Font name="System Bold" size="12.0" /></font>
                </Button>
            </children>
        </HBox>

        <TableView fx:id="tblSales" style="-fx-background-radius: 5;" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colDate" prefWidth="140.0" text="Fecha / Hora" />
                <TableColumn fx:id="colProduct" prefWidth="200.0" text="Producto" />
                <TableColumn fx:id="colUser" prefWidth="130.0" text="Vendedor" />
                <TableColumn fx:id="colQty" prefWidth="70.0" text="Cant." />
                <TableColumn fx:id="colDescription" prefWidth="210.0" text="DescripciÃ³n" />
                <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" prefHeight="60.0" spacing="20.0" style="-fx-background-color: #2c3e50; -fx-padding: 15; -fx-background-radius: 8;">
            <children>
                <Label text="TOTAL INGRESOS EN ESTE PERIODO:" textFill="WHITE">
                    <font>
                        <Font name="System Bold" size="15.0" />
                    </font>
                </Label>
                <Label fx:id="lblTotalPeriodo" text="0.00" textFill="#2ecc71">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>
                <Label text="Bs." textFill="#2ecc71">
                    <font>
                        <Font name="System Bold" size="18.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</VBox>
