<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox xmlns="http://javafx.com/javafx/25" 
      xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.casarick.app.controller.admin.CustomerController"
      style="-fx-background-color: #f4f4f4;">
    
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    
    <children>
        <!-- Barra superior con título y botones -->
        <HBox alignment="CENTER_LEFT" spacing="10.0">
            <children>
                <Label text="GESTIÓN DE CLIENTES" textFill="#2c3e50">
                    <font><Font name="System Bold" size="20.0" /></font>
                </Label>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnNew" onAction="#handleCreateCustomer" 
                       style="-fx-background-color: #27ae60; -fx-font-weight: bold;" 
                       text="NUEVO CLIENTE" textFill="WHITE" />
                <Button fx:id="btnEdit" disable="true" 
                       style="-fx-background-color: #3498db; -fx-font-weight: bold;" 
                       text="EDITAR" textFill="WHITE" />
            </children>
        </HBox>

        <!-- Tabla de clientes - ocupa todo el espacio disponible -->
        <TableView fx:id="tblCustomers" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="60.0" text="ID" />
                <TableColumn fx:id="colName" prefWidth="200.0" text="Nombre" />
                <TableColumn fx:id="colLastName" prefWidth="200.0" text="Apellido" />
                <TableColumn fx:id="colPhone" prefWidth="150.0" text="Teléfono" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <!-- Botón de volver alineado a la derecha -->
        <HBox alignment="CENTER_RIGHT">
            <children>
                <Pane HBox.hgrow="ALWAYS" />
                <Button fx:id="btnBack" onAction="#handleBack" 
                       style="-fx-background-color: #e74c3c; -fx-font-weight: bold; -fx-text-fill: white;" 
                       text="VOLVER" />
            </children>
        </HBox>
    </children>
</VBox>